@model WalkingTec.Mvvm.Demo.ViewModels.DataTableVMs.ChartVM
@inject IStringLocalizer<Program> Localizer;
@*<wt:grid vm="@Model" url="/DataTable/Search" />*@

@*<wt:chart field="@Model.charts" type="Bar" title="abcd" height="400"/>
  <wt:chart field="@Model.charts" type="Pie" title="abcd" height="400" />*@
<wt:searchpanel vm="@Model" reset-btn="true" chart-id="c1,c2,c3,c4,c5" grid-id="" chart-prefix="Searchertest">
  <wt:row items-per-row="ItemsPerRowEnum.Three">
    <wt:row items-per-row=" ItemsPerRowEnum.Three">
      <wt:combobox field="Searchertest.LogType" empty-text="@Localizer["Sys.All"]" />
      <wt:textbox field="Searchertest.ITCode" />
      <wt:textbox field="Searchertest.ActionUrl" />
    </wt:row>
    <wt:row items-per-row=" ItemsPerRowEnum.Three">
            <wt:datetime field="Searchertest.ActionTime" type="DateTime" range="true" />
            <wt:textbox field="Searchertest.IP" />
            <wt:textbox field="Searchertest.Duration" />
    </wt:row>
  </wt:row>
</wt:searchpanel>

<wt:row items-per-row="ItemsPerRowEnum.Two">
  <wt:card title="圆环">
    <wt:chart id="c1" type="PieHollow" title="圆环" height="400" theme="WalkingTec.Mvvm.TagHelpers.LayUI.Chart.ChartThemeEnum.westeros" trigger-url="/DataTable/GetCharts" />
  </wt:card>
  <wt:card title="饼图">
    <wt:chart id="c2" type="Pie" title="饼图" height="400" theme="WalkingTec.Mvvm.TagHelpers.LayUI.Chart.ChartThemeEnum.dark" trigger-url="/DataTable/GetCharts" />
  </wt:card>
</wt:row>
<wt:row items-per-row="ItemsPerRowEnum.One">
  <wt:card title="散点图">
    <wt:chart id="c3" is-horizontal="true" type="Scatter" title="散点图" height="400" trigger-url="/DataTable/GetCharts" />
  </wt:card>
</wt:row>
<wt:row items-per-row="ItemsPerRowEnum.Two">
  <wt:card title="折线图">
    <wt:chart id="c4" is-horizontal="false" show-legend="true" open-smooth="true" show-tooltip="true" type="Line" title="折线图" height="400" theme="WalkingTec.Mvvm.TagHelpers.LayUI.Chart.ChartThemeEnum.chalk" trigger-url="/DataTable/GetCharts" />
  </wt:card>
  <wt:card title="柱状图">
    <wt:chart id="c5" is-horizontal="false" show-legend="true" show-tooltip="true" type="Bar" title="柱状图" height="400" theme="WalkingTec.Mvvm.TagHelpers.LayUI.Chart.ChartThemeEnum.essos" trigger-url="/DataTable/GetCharts" />
  </wt:card>
</wt:row>


